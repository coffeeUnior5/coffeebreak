<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AuthorizationFragment">


    <Button
        android:id="@+id/btnback"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="26dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/arrow_left"
        >

    </Button>

    <TextView
        android:id="@+id/entertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter"
        android:textColor="@color/enter"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="@id/btnback"
        app:layout_constraintTop_toBottomOf="@id/btnback"
        android:layout_marginStart="15dp"
        android:layout_marginTop="46dp"
       >

    </TextView>

    <TextView
        android:id="@+id/welcometext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcone"
        android:textColor="@color/welcome"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/entertext"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/entertext"
        >

    </TextView>
    
    <LinearLayout
        android:id="@+id/edtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="41dp"
        app:layout_constraintTop_toBottomOf="@id/welcometext"
        android:layout_marginTop="57dp"
        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/message"
            >

        </ImageView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/emailedt"
            android:textSize="12dp"
            android:paddingStart="46dp"
            >

        </EditText>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/edtpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginHorizontal="41dp"
        app:layout_constraintTop_toBottomOf="@id/edtemail"
        android:layout_marginTop="36dp"

        >

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/lock"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/password"
            android:textSize="12dp"
            android:paddingStart="55dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textforgotpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgotpass"
        android:textSize="14dp"
        android:textColor="@color/forgotpass"
        app:layout_constraintStart_toStartOf="@id/edtpass"
        app:layout_constraintEnd_toEndOf="@id/edtpass"
        app:layout_constraintTop_toBottomOf="@id/edtpass"
        android:layout_marginTop="27dp"/>

    <Button
        android:id="@+id/btnnext"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/green_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="227dp"
        >
    </Button>

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/arrow_right"
        app:layout_constraintStart_toStartOf="@id/btnnext"
        app:layout_constraintEnd_toEndOf="@id/btnnext"
        app:layout_constraintTop_toTopOf="@id/btnnext"
        app:layout_constraintBottom_toBottomOf="@id/btnnext"
        >

    </ImageView>

    <TextView
        android:id="@+id/txtloginusing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginusing"
        android:textColor="#000000"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@id/textforgotpass"
        app:layout_constraintStart_toStartOf="@id/textforgotpass"
        android:layout_marginTop="221dp"
        >

    </TextView>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/txtloginusing"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@id/txtloginusing"
        app:layout_constraintEnd_toEndOf="@id/txtloginusing"
        >

        <ImageView
            android:id="@+id/yandex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/yandex"
            android:paddingEnd="10dp"
            />

        <ImageView
            android:id="@+id/google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google"/>

        <ImageView
            android:id="@+id/vk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vk"
            android:paddingStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icons"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@id/icons"
        app:layout_constraintEnd_toEndOf="@id/icons"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/firsttime"
            android:textColor="#AAAAAA"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reg"
            android:textColor="#324A59"
            android:textSize="14dp"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>